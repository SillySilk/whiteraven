DB_HOST=yourusername.mysql.pythonanywhere-services.com

# Email Configuration for Production
# Configure with your business email or Gmail with App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-business-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=noreply@whiteravenpourhouse.com

# Administrator Configuration
# This email will receive contact form submissions and error notifications
ADMIN_EMAIL=owner@whiteravenpourhouse.com

# File Storage Paths for PythonAnywhere
# Replace 'yourusername' with your actual PythonAnywhere username
STATIC_ROOT=/home/yourusername/static/
